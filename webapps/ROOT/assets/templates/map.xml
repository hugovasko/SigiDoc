<?xml version="1.0" encoding="utf-8"?>
<kiln:root xmlns:i18n="http://apache.org/cocoon/i18n/2.1"
           xmlns:kiln="http://www.kcl.ac.uk/artshums/depts/ddh/kiln/ns/1.0"
           xmlns:xi="http://www.w3.org/2001/XInclude"
           xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

  <kiln:parent>
    <xi:include href="base.xml" />
  </kiln:parent>

  <kiln:child>
    <kiln:block name="title">
      <i18n:text>Map</i18n:text>
    </kiln:block>

    <kiln:block name="page-header">
      <div class="row">
        <div class="large-12 columns text-center">
          <h1>
            <i18n:text i18n:key="map">Map page</i18n:text>
          </h1>
        </div>
      </div>
    </kiln:block>

    <kiln:block name="content">
      <div class="row">
        <div class="large-12 columns">
          <div id="map" style="width: 100%; height: 600px;">
            <iframe src="./map.html" width="100%" height="100%" frameborder="0" style="border:0"></iframe>
          </div>
        </div>
      </div>
    </kiln:block>

  </kiln:child>
</kiln:root>
